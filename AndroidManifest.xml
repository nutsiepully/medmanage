<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.vcs.medmanage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name="org.vcs.medmanage.ResidentSearchActivity" >
        </activity>
        <activity android:name="org.vcs.medmanage.ResidentMedicineActivity" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.vcs.medmanage.MedicationListActivity"
            android:label="@string/title_medication_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.vcs.medmanage.MedicationDetailActivity"
            android:label="@string/title_medication_detail"
            android:parentActivityName=".MedicationListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MedicationListActivity" />
        </activity>
        <activity
            android:name="org.vcs.medmanage.LandingPage"
            android:label="@string/title_activity_landing_page" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.vcs.medmanage.Walkthrough"
            android:label="@string/title_activity_walkthrough" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.vcs.medmanage.ResidentCalendarActivity"
            android:label="Resident Calendar" >
        </activity>
        <activity
            android:name="org.vcs.medmanage.MedicationFragment"
            android:label="@string/title_activity_medication_fragment" >
        </activity>
    </application>

</manifest>
