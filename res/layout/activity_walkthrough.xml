<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Walkthrough" >

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/walkthrough_instructions"
        android:textColor="@color/walkthrough_instructions_text"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />
    
    <LinearLayout 
        android:id="@+id/flex_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/instructions"
        android:layout_centerInParent="true"
        ></LinearLayout>
    
    <Button 
        android:id="@+id/start_over"
        android:layout_width="@dimen/walkthrough_button_width"
        android:layout_height="@dimen/walkthrough_button_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:text="@string/start_over_text"
        android:textColor="@color/walkthrough_button_text"
        android:background="@drawable/rounded_edges_2"
        />
    
    <LinearLayout 
        android:id="@+id/flex_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="15dp"
        ></LinearLayout>
    
    <Button 
        android:id="@+id/call_nurse"
        android:layout_width="@dimen/walkthrough_button_width"
        android:layout_height="@dimen/walkthrough_button_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:text="@string/call_nurse_text"
        android:textColor="@color/walkthrough_button_text"
        android:background="@drawable/rounded_edges_2"
        />

</RelativeLayout>
